datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  articles Article[]
}

model Article {
  id         Int      @id @default(autoincrement())
  title      String
  description String?
  isFavorite Boolean  @default(false)
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int
}